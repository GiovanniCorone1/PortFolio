---
import Social from './Social.astro';
import Linkedin from './icons/Linkedin.astro';
import Github from './icons/Github.astro';
import Gmail from './icons/Gmail.astro';
const year = new Date().getFullYear();
---
<footer class="px-4 md:px-24 mt-8">
    <div class="flex flex-col md:flex-row md:justify-between border-t pt-8 gap-4">
        <div>
            <ul class="flex md:flex-col fle-row gap-4 font-medium justify-around">
                <li><a href="#experiencie" class="hover:text-zinc-400 transition-colors duration-500 text-xl">Experiencia Laboral</a></li>
                <li><a href="#projects" class="hover:text-zinc-400 transition-colors duration-500 text-xl">Proyectos</a></li>
                <li><a href="#aboutme" class="hover:text-zinc-400 transition-colors duration-500 text-xl">Sobre Mí</a></li>
            </ul>
        </div>
        <div class="flex flex-col items-center gap-4 font-bold">
            <h1 class="text-body text-xl">Giovanni Coronel</h1>
            <div class="flex md:flex-row gap-4">
                <Social href="https://www.linkedin.com/in/giovanni-coronel-a2646b22a/">
                    <Linkedin class="size-8"/>
                </Social>
                <Social href="https://github.com/GiovanniCorone1">
                    <Github class="size-8"/>
                </Social>
                <Social href="mailto:elgiovanni.cc@gmail.com" aria-label="Enviar correo electrónico">
                    <Gmail class="size-8"/>
                </Social>
            </div>
        </div>
    </div>
    <p class="text-center text-lg font-medium text-zinc-400">{year}, Created by Giovanni Coronel</p>
</footer>
